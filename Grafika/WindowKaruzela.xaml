<Window x:Class="Grafika.WindowKaruzela"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafika"
        mc:Ignorable="d"
        Title="WindowKaruzela" Height="450" Width="800">
    <StackPanel>
        <Image Source="../../../cat.jpg" x:Name="cat_jpg" Height="300" Margin="10"/>
        <UniformGrid Rows="1">
            <Button Margin="10" Padding="5" Height="50">
                <Image Source="../../../arrow_left.png" Height="50"/>
            </Button>
            <Button Margin="10" Padding="5" Height="50">
                <Image Source="../../../arrow-right.png" Height="50"/>
            </Button>
        </UniformGrid>
    </StackPanel>
</Window>
